# This is an example of a .env file for a Todo application.
# It contains environment variables that are used to configure the application.

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
ENV=development

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_USER=test
DB_PASSWORD=test
DB_NAME=todoapp-db
DB_SSL_MODE=disable

# API Configuration
API_PREFIX=/api/v1

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Accept,Authorization,Content-Type,X-CSRF-Token

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
